<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linear"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/clearIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/num_rl"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/clear"/>

    <TextView
        android:id="@+id/num_et"
        android:layout_width="match_parent"
        android:layout_above="@id/num_rl"
        android:layout_toRightOf="@id/clearIv"
        android:hint="0"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginRight="18dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:gravity="end"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_above="@id/num_rl"/>


    <RelativeLayout
        android:id="@+id/num_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:paddingTop="20dp"
               android:layout_height="wrap_content"

               android:weightSum="4">


               <TextView
                   android:id="@+id/oneTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:paddingTop="28dp"
                   android:layout_marginRight="10dp"
                   android:paddingBottom="28dp"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_weight="1"

                   android:background="@drawable/circle_bg"
                   android:text="1"/>
               <TextView
                   android:id="@+id/twoTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:layout_marginRight="10dp"

                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:text="2"/>
               <TextView
                   android:id="@+id/threeTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/circle_bg"
                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:textSize="18sp"                   android:layout_marginRight="10dp"

                   android:textStyle="bold"
                   android:gravity="center"

                   android:text="3"/>
               <TextView
                   android:id="@+id/acTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"
                   android:layout_marginRight="10dp"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:layout_weight="1"
                   android:text="C"/>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingTop="20dp"

               android:weightSum="4">


               <TextView
                   android:id="@+id/fourTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"
                   android:layout_marginRight="10dp"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:gravity="center"
                   android:layout_weight="1"

                   android:text="4"/>
               <TextView
                   android:id="@+id/fiveTv"
                   android:layout_width="match_parent"
                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:layout_marginRight="10dp"

                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"

                   android:text="5"/>
               <TextView
                   android:id="@+id/sixTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_marginRight="10dp"

                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:gravity="center"

                   android:text="6"/>
               <TextView
                   android:id="@+id/addTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginRight="10dp"

                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:layout_weight="1"
                   android:text="+"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingTop="20dp"

               android:weightSum="4">


               <TextView
                   android:id="@+id/sevenTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"
                   android:layout_marginRight="10dp"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:layout_weight="1"
                   android:text="7"/>
               <TextView
                   android:id="@+id/eightTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="28dp"
                   android:layout_marginRight="10dp"

                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:layout_weight="1"
                   android:gravity="center"

                   android:text="8"/>
               <TextView
                   android:id="@+id/nineTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:paddingTop="28dp"
                   android:layout_marginRight="10dp"

                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:gravity="center"

                   android:text="9"/>
               <TextView
                   android:id="@+id/subTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:paddingTop="28dp"
                   android:layout_marginRight="10dp"

                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:layout_weight="1"
                   android:text="-"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingTop="20dp"

               android:weightSum="4">


               <TextView
                   android:id="@+id/mulTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="28dp"
                   android:layout_marginRight="10dp"

                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:gravity="center"
                   android:layout_weight="1"
                   android:text="*"/>
               <TextView
                   android:id="@+id/zeroTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_marginRight="10dp"

                   android:layout_weight="1"
                   android:gravity="center"

                   android:text="0"/>
               <TextView
                   android:id="@+id/divTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:paddingTop="28dp"
                   android:layout_marginRight="10dp"

                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"

                   android:gravity="center"

                   android:text="/"/>
               <TextView
                   android:id="@+id/equalTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:paddingTop="28dp"
                   android:paddingBottom="28dp"
                   android:background="@drawable/circle_bg"

                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_marginRight="10dp"


                   android:layout_weight="1"
                   android:text="="/>

           </LinearLayout>

       </LinearLayout>

    </RelativeLayout>



</RelativeLayout>